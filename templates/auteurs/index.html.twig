{% extends 'base.html.twig' %}

{% block title %}
    Auteurs index
        
    
{% endblock %}


{% block body %}

    <h1>
        Auteurs index
    </h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                                                        
                                    
                </th>
                <th>
                    Name
                                                        
                                    
                </th>
                <th>
                    Date_at
                                                        
                                    
                </th>
                <th>
                    Relation
                                                        
                                    
                </th>
                <th>
                    actions
                                                        
                                    
                </th>
            </tr>
        </thead>
        <tbody>
            {% for auteur in auteurs %}
                <tr>
                    <td>
                        {{ auteur.id }}
                    </td>
                    <td>
                        {{ auteur.name }}
                    </td>
                    <td>
                        {{ auteur.dateAt ? auteur.dateAt|date('Y-m-d H:i:s') : '' }}
                    </td>
                    <td>
                        {{ auteur.relation }}
                    </td>
                    <td>
                        <a href="{{ path('app_auteurs_show', {'id': auteur.id}) }}">
                            show
                                                                                
                                                    
                        </a>
                        <a href="{{ path('app_auteurs_edit', {'id': auteur.id}) }}">
                            edit
                                                                                
                                                    
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">
                        no records found
                                                                    
                                            
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_auteurs_new') }}">
        Create new
                    
            
    </a>
{% endblock %}
